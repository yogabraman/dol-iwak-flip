<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:orientation="vertical"
    tools:context=".menu.First">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cumi-Cumi"
                android:textSize="36dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/best"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_cumi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_cumi"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_above="@+id/img_cumi"
                android:layout_toRightOf="@+id/img_cumi"
                android:layout_toEndOf="@+id/img_cumi"
                android:layout_marginBottom="-50dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginStart="-30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumbo"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/alata"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.000/KG"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/img_cumi"
                android:layout_toLeftOf="@+id/img_cumi"
                android:layout_toStartOf="@+id/img_cumi"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="-50dp"
                android:layout_marginEnd="-50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedang"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/alata"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.000/KG"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/img_cumi"
                android:layout_toRightOf="@+id/img_cumi"
                android:layout_toEndOf="@+id/img_cumi"
                android:layout_marginLeft="-40dp"
                android:layout_marginStart="-40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecil"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/alata"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.000/KG"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/title_manyung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_strip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ikan Asap Manyung"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:fontFamily="@font/alata"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_manyung">
            <ImageView
                android:id="@+id/img_manyung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_manyung"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_above="@+id/img_manyung"
                android:layout_toRightOf="@+id/img_manyung"
                android:layout_toEndOf="@+id/img_manyung"
                android:layout_marginBottom="-50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daging"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/alata"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.000/KG"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_manyung"
                android:layout_toEndOf="@+id/img_manyung"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daging"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/alata"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.000/KG"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/img_manyung"
                android:layout_toRightOf="@+id/img_manyung"
                android:layout_toEndOf="@+id/img_manyung"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daging"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/alata"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.000/KG"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>